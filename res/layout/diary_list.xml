<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="48dp"
    android:orientation="vertical" >

    <View
        android:id="@+id/divider_diary_top"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="0dp"
        android:background="@color/divider_background_dark"
        android:padding="0dp" />

    <RelativeLayout
        android:id="@+id/diary_list_button_container"
        android:layout_width="match_parent"
        android:layout_height="60dp" >

        <Button
            android:id="@+id/create_note_button"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:background="@drawable/selector_diary_button"
            android:text="@string/create_note_button_text"
            android:textColor="@drawable/selector_diary_button_text"
            android:textSize="22sp" />
        <!-- Divider -->

        <View
            android:id="@+id/divider_diary_bottom"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/create_note_button"
            android:layout_margin="0dp"
            android:background="@color/divider_background_dark"
            android:padding="0dp" />
    </RelativeLayout>

    <ListView
        android:id="@+id/android:list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:id="@android:id/empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>