<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
   	>
	
	<!-- Neither this nor parent layout is useless, this is necessary in order to avoid margins on list header -->
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical"
	    android:paddingLeft="12dip"
	    android:paddingRight="12dip"
	    android:paddingTop="10dip"
	   	android:paddingBottom="12dip"
	    android:layout_marginLeft="12dip"
	    android:layout_marginRight="12dip"
	    android:layout_marginTop="10dip"
	    android:background="@drawable/list_item_bg">
	    
    
			<TextView
	            android:id="@+id/date_label"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentTop="true"
	            android:layout_alignParentRight="true"
	            android:padding="3dp"
	            android:textSize="13sp"
	            android:layout_gravity="right"
	            android:textColor="@color/text_color_light" />
			
	        <TextView
	            android:id="@+id/positive_one_label"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_alignParentLeft="true"
	            android:layout_toLeftOf="@+id/date_label"
	            android:layout_marginBottom="2dp"
	            android:padding="3dp"
	            android:textSize="16sp" />
	   
	        <TextView
	            android:id="@+id/positive_two_label"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_alignParentLeft="true"
	            android:layout_below="@+id/positive_one_label"
	            android:layout_marginBottom="2dp"
	            android:padding="3dp"
	            android:textSize="16sp" />
	
	
	
	        <TextView
	            android:id="@+id/positive_three_label"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_alignParentLeft="true"
	            android:layout_below="@+id/positive_two_label"
	            android:layout_marginBottom="2dp"
	            android:padding="3dp"
	            android:textSize="16sp" />

	</RelativeLayout>
</LinearLayout>