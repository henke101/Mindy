<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
   	>
	
	<!-- Neither this nor parent layout is useless, this is necessary in order to avoid margins on list header -->
	<RelativeLayout 
	    android:id="@+id/diary_item_container"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical"
	    android:paddingLeft="12dip"
	    android:paddingRight="12dip"
	    android:paddingTop="10dip"
	    android:paddingBottom="12dp"	
	    android:layout_marginLeft="12dip"
	    android:layout_marginRight="12dip"
	    android:layout_marginTop="10dip"
	    android:background="@drawable/list_item_bg">
	    
    
			<TextView
	            android:id="@+id/date_label"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentTop="true"
	            android:layout_alignParentRight="true"
	            android:padding="3dp"
	            android:textSize="13sp"
	            android:layout_gravity="right"
	            android:textColor="@color/text_color_light"
	            android:focusable="false" />
			
		    <TextView 
	            android:id="@+id/title_label"
	            android:layout_height="wrap_content"
	            android:layout_width="match_parent"
	            android:layout_marginLeft="7dp"
	            android:layout_alignParentTop="true"
	            android:layout_alignParentLeft="true"
	            android:layout_toLeftOf="@+id/date_label"
	            android:textSize="19sp"
	            android:textColor="@color/text_color_dark"
	            android:shadowColor="@color/text_shadow_color_light"
	            android:shadowDx="1.0"
	            android:shadowDy="1.0"
	            android:shadowRadius="2.0"
	    		android:padding="3dp"
	            android:focusable="false" 	/>
	        
	        <TextView 
	            android:id="@+id/body_label"
	            android:layout_height="wrap_content"
	            android:layout_width="match_parent"
	            android:layout_marginLeft="12dp" 
	            android:layout_marginBottom="12dp" 
	            android:layout_alignParentLeft="true"
	            android:layout_below="@+id/title_label"
	    		android:padding="3dp"	
	            android:textSize="16sp"
	            android:textColor="@color/text_color_light"
	            android:focusable="false" />
	        
	        

</RelativeLayout>
</LinearLayout>